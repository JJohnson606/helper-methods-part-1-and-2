<p style="color: green"><%= notice %></p>

<div>
  <h1>Director details</h1>

  <div>
    <div>
      <%= link_to "Go back", directors_path %>
    </div>

    <div>
      <%= link_to "Edit Director", edit_director_path(@director) %>
    </div>
  </div>

  <dl>
    <dt>Name</dt>
    <dd><%= @director.name %></dd>

    <dt>Bio</dt>
    <dd><%= @director.bio %></dd>

    <dt>Date of Birth</dt>
    <dd><%= @director.date_of_birth %></dd>

    <dt>Created at</dt>
    <dd><%= time_ago_in_words(@director.created_at) %> ago</dd>

    <dt>Updated at</dt>
    <dd><%= time_ago_in_words(@director.updated_at) %> ago</dd>
  </dl>
</div>

<div>
  <%= button_to "Destroy this director", @director, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
</div>
